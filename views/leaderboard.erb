<script>add_css("/css/leaderboard.css?<%=Time.now.to_i%>")</script>

<h2>Leaderboard</h2>

<div id="container">
    <%i = 0%>
    <%while i < users.length%>
        <%if users[i]['score'] >= 0%>

            <a href="users/<%=users[i]['id']%>"
            <%if session[:user] && session[:user][:id] == users[i]['id']%>
                 class="player" id="self">
            <%else%>
                 class="player">
            <%end%>
                <%=display_user_panel(users[i]['id'], "<span>Score: #{users[i]['score']}</span> <span>| <strong>#{i + 1}</strong></span>", "")%>
            </a>
        <%end%>
        <%i += 1%>
    <%end%>
</div>